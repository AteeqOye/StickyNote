<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="8dp">

    <View
        android:id="@+id/reminder_view"
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:background="@drawable/bg_note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reminder_view" />

    <TextView
        android:id="@+id/reminder_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bubblegum_sans"
        android:text="@string/heading"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/reminder_view"
        app:layout_constraintEnd_toEndOf="@+id/reminder_view"
        app:layout_constraintStart_toStartOf="@+id/reminder_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".4" />

    <TextView
        android:id="@+id/date_reminder"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#DCDBDB"
        android:padding="7dp"
        android:layout_margin="10dp"
        app:layout_constraintVertical_bias="1"
        android:textAlignment="center"
        android:fontFamily="@font/averia_gruesa_libre"
        android:text="@string/date_and_time"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/reminder_view"
        app:layout_constraintStart_toStartOf="@+id/reminder_view" />

</androidx.constraintlayout.widget.ConstraintLayout>